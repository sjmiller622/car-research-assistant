{
  "manifest_version": 3,
  "name": "Car Research Assistant",
  "version": "1.3",
  "description": "Helps capture car listing data during research",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://www.carcomplaints.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.cars.com/*",
        "https://www.autotrader.com/*",
        "https://www.cargurus.com/*",
        "https://www.carsoup.com/*",
        "https://www.carcomplaints.com/*"
      ],
      "js": [ "utils.js", "content.js" ]
    }
  ]
}